@model IEnumerable<AspAssignmnet.Models.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Company"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPosiotion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPublishedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobPosiotion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobPublishedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @if (User.IsInRole("Admin") || User.IsInRole("Company"))
            {
                @Html.ActionLink("Edit", "Edit", new { id=item.JobId }) 
            }
            |
            @if (User.IsInRole("Admin") || User.IsInRole("Company"))
            {
                @Html.ActionLink("Details", "Details", new { id=item.JobId }) 
            }
            |
            @if (User.IsInRole("Admin") || User.IsInRole("Company"))
            {
                @Html.ActionLink("Delete", "Delete", new { id=item.JobId })
            }
        </td>
    </tr>
}

</table>
